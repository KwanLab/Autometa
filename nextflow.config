// *****************
// Autometa Nextflow Configuration
// Congigurations are broken up into files, see below
// *****************

manifest {
    author = "Jason C. Kwan Lab"
    defaultBranch = "main"
    name = "autometa"
    homePage = "https://github.com/KwanLab/Autometa"
    description = "Autometa: Automated Extraction of Microbial Genomes from Shotgun Metagenomes"
    mainScript = "/nextflow/main.nf"
    doi = "https://doi.org/10.1093/nar/gkz148"
    version = "2.0.0"
    nextflowVersion = ">=21.04"
}

// Arguments required by the pipeline are defined, and can be modified, here:
includeConfig 'nextflow/nextflow.config'
